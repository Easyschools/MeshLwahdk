<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation.xml"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.developnetwork.meshlwahdk.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_confirmNumberFragment"
            app:destination="@id/confirmNumberFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFirstStepFragment"
            app:destination="@id/registerFirstStepFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.developnetwork.meshlwahdk.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/action_registerFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/confirmNumberFragment"
        android:name="com.developnetwork.meshlwahdk.ui.auth.confirmnumber.ConfirmNumberFragment"
        android:label="ConfirmNumberFragment" >
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/action_confirmNumberFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.developnetwork.meshlwahdk.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_registerFirstStepFragment"
            app:destination="@id/registerFirstStepFragment" />
        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFirstStepFragment"
        android:name="com.developnetwork.meshlwahdk.ui.auth.register.RegisterFirstStepFragment"
        android:label="fragment_register_first_step"
        tools:layout="@layout/fragment_register_first_step" >
        <action
            android:id="@+id/action_registerFirstStepFragment_to_confirmNumberFragment"
            app:destination="@id/confirmNumberFragment" />
        <action
            android:id="@+id/action_registerFirstStepFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.developnetwork.meshlwahdk.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>